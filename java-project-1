pipeline{
    agent none
    environment{
        PATH = "/usr/bin/:$PATH"
    stages{
        stage('git clone'){
            agent {label 'node1'}
            steps{
                git branch: 'main', url: 'https://github.com/naveen13dev/onlinebookstore.git'
            }
        }
        stage('BUILD'){
            agent {label 'node1'}
            steps{
                sh '''
                mvn clean install
                '''
            }
        }
    }
}    
